import React from "react";
import { Play, Music } from "lucide-react";
import { Link } from "react-router-dom";
import { createPageUrl } from "@/utils";

export default function QuickAccess({ playlists }) {
  const quickItems = [
    { name: "Liked Songs", icon: "❤️", url: createPageUrl("Library") },
    { name: "Recently Played", icon: "🕒", url: createPageUrl("Library") },
    ...playlists.slice(0, 4).map(playlist => ({
      name: playlist.name,
      icon: "🎵",
      url: createPageUrl(`Playlist?id=${playlist.id}`)
    }))
  ];

  return (
    <div className="grid grid-cols-2 lg:grid-cols-3 gap-4 mb-8">
      {quickItems.map((item, index) => (
        <Link
          key={index}
          to={item.url}
          className="group flex items-center gap-4 glass-effect rounded-xl p-4 hover:bg-white/10 transition-all duration-300 hover:glow-purple"
        >
          <div className="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-600 to-pink-600 flex items-center justify-center text-xl">
            {item.icon}
          </div>
          <span className="font-semibold truncate">{item.name}</span>
          <Play className="w-5 h-5 ml-auto opacity-0 group-hover:opacity-100 transition-opacity" />
        </Link>
      ))}
    </div>
  );
}